<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:rowCount="2"
    android:columnCount="3">
  
    
    <Button
        android:id="@+id/one"     
        android:text="1"
        android:textSize="12pt"
        android:shadowColor="#aa55"
        android:shadowRadius="1"
        android:shadowDx="5"
        android:shadowDy="5"
        android:onClick="SelfClick"
        />
    <Button
        android:id="@+id/two"       
        android:text="2"
        
        android:textSize="20pt"
        android:onClick="SelfClick"
        />
    <Button
        android:id="@+id/three"
        android:text="3"
       	
        android:textSize="15pt"
        android:onClick="SelfClick"
        />
    <ImageButton
        android:id="@+id/four"
        
        android:src="@drawable/button_selector2"
        android:onClick="SelfClick"
        />
    <Button
        android:id="@+id/five"
        android:text="5"
        
        android:onClick="SelfClick"
        />
    <ToggleButton
        android:id="@+id/six"
        android:text="6"
        android:textOn="LOL"
        android:textOff="C'MON"
        android:onClick="SelfClick"
        />

</GridLayout>
        